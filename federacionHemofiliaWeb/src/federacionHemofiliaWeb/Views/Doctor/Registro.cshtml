@model PacienteRegistroVM
@{ 
    ViewData["Title"] = "Registro Paciente";
}
 <body class="sign-in">
     
    <div class="container">
      <form class="form-signin" asp-controller="Paciente" asp-action="Registro" method="post">
        <h1 class="text-center">Registro del Paciente </h1>  
        <!--<h3 class="form-signin-heading">Nombre(s)</h3>-->
        <!-- Stack the columns on mobile by making one full-width and the other half-width -->
        <div class="row">
            <div class="col-xs-12 col-lg-6">
                <br/>
                <label for="inputEmail" class="sr-only">Nombre(s)</label>
                <input asp-for="Name" id="Doctor-names" class="form-control" placeholder="Nombre(s)" required autofocus>
                
            </div> 
            
            <div class="col-xs-12 col-lg-6">
                <br/>
                <label for="inputEmail" class="sr-only">Apellidos</label>
                <input asp-for="LastNmes" id="Doctor-lastnames" class="form-control" placeholder="Apellidos" required autofocus>
            </div>
        </div>
        <br/>
        
        <div>
            <label for="inputEmail" class="sr-only">Correo Electronico</label>
            <input asp-for="Email" type="email" id="email" class="form-control" placeholder="Correo Electronico" required autofocus>
        </div>
        <br/>
        <div>
            
            <input asp-for="BirthDate" id="Bdate" class="form-control" placeholder="Fecha de Nacimiento" type="text" onfocus="this.type='date';
                      this.setAttribute('onfocus','');this.blur();this.focus();" required autofocus>
        </div>
        <br/>
        <div>
        <label for="inputEmail" class="sr-only">Diagnostico</label>
        <input asp-for="Diagnostic" type="text" id="diagnostico" class="form-control" placeholder="Diagnostico" required autofocus>
        </div>
        
        <br/>  
        <div class="row">
            <div class="col-xs-12 col-lg-6">
                <label for="inputEmail" class="sr-only">Peso</label>
                <input id="peso" class="form-control" asp-for="Peso" placeholder="Peso" required autofocus>
                <br/>
            </div>
            <div class="col-xs-12 col-lg-6">
                <label for="inputEmail" class="sr-only">Estatura</label>
                <input id="estatura" class="form-control" asp-for="Height" placeholder="Estatura" required autofocus>
            </div>
        </div>
