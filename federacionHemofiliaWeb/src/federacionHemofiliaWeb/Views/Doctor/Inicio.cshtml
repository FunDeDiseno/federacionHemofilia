                    <p class="text-center"> Registra a un paciente </p><br/>
                    <img src="~/images/registropaciente.jpg" class="center-block" width="350" height="300"><br/>
                     <a asp-controller="Doctor" asp-action="Registro"><input id = "inicio" style="width:40%" class="center-block btn btn-lg btn-primary btn-block" name="Ir" type="button" value="Ir"></input></a>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6 col-xs-12 col-lg-6 col-sm-12">
                <div class="rectangle">
                    <!--<img src="~/images/user.png" class="center-block" width="140" height="140">-->
                    <h2 class="text-center">Cita</h2>
                    <p class="text-center"> Agenda una cita con tu paciente </p><br/>
                    <img src="~/images/agendarcita.jpg" class="center-block" width="350" height="300"><br/>
                    <a asp-controller="Doctor" asp-action="Cita"> <input id = "inicio" style="width:40%" class="center-block btn btn-lg btn-primary btn-block" name="Ir" type="button" value="Ir"></input></a>
                </div>
            </div>
