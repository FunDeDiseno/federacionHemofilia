                    <p class="text-center"> Invita a un Doctor a usar este servicio </p><br/>
                    <img src="~/images/invitar-doc.jpg" class="center-block" width="350" height="300"><br/>
                     <a asp-controller="Doctor" asp-action="Invitar"><input id = "inicio" style="width:40%" class="center-block btn btn-lg btn-primary btn-block" name="Ir" type="button" value="Ir"></input></a>
                </div>
            </div>
        </div>
    </div> <!-- /container asp-controller="Doctor" asp-action="Inicio" -->


