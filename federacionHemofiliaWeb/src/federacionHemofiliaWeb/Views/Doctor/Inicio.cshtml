
@{ 
    ViewData["Title"] = "Inicio";
}
 <body class="site-wrapper">
    <br/>
    <div class="container site-wrapper">
        <h1 class="text-center"> INICIO</h1>
        <br/>
        <div class="row">
            <div class="col-md-6 col-xs-12 col-lg-6 col-sm-12 ">
                <div class="rectangle ">
                    <!--<img src="~/images/user.png" class="center-block" width="140" height="140">-->
                    <h2 class="text-center">Pacientes</h2>
                    <p class="text-center"> Monitoreo del registro de los pacientes </p><br/>
                    <img src="~/images/portalDoctor.jpg" class="center-block" width="350" height="300"><br/>
                    <a asp-controller="Doctor" asp-action="Paciente"><input id = "inicio" style="width:40%" class="center-block btn btn-lg btn-primary btn-block" name="Ir" type="button" value="Ir"></input></a>
                </div>
            </div>
