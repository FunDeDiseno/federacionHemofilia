 @{
    ViewData["Title"] = "Cita";
}
@model CitaVM
 <body class="site-wrapper">
    <br/><br/>
    <div class="container">

      <form class="form-signin site-wrapper" asp-controller="Doctor" asp-action="Cita" method="post">
        <img class="center-block img-rounded img-responsive" src="~/images/appointment.png" width="140">
        <h2 class="form-signin-heading text-center">Agendar Cita</h2>
         <br/>
        <label  for="inputEmail" class="sr-only">Correo Electronico</label>
        <input asp-for="Email" id="mail" type="email" class="form-control" placeholder="Correo Electronico" required autofocus>
        <br/>
        <!--<div>
          <input asp-for="Fecha" id="Bdate" class="form-control" type="date" name="Cita" value="Proxima cita">-->
          <input asp-for="Fecha" id="Bdate" class="form-control" placeholder="Proxima cita" type="text" onfocus="this.type='date';
                      this.setAttribute('onfocus','');this.blur();this.focus();" required autofocus>
   
        
        <!--     </div>
        <label for="inputEmail" class="sr-only">Fecha</label>
        <input id="code_trip" class="form-control" placeholder="Fecha a agendar" required autofocus>-->
        
        <br/>
        <button id = "agendar" class="btn btn-lg btn-primary btn-block" type="submit">Agendar Cita</button>
      </form>

    </div> <!-- /container -->


