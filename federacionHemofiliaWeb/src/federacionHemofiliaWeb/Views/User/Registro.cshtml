@model DoctorVM
@{ 
    ViewData["Title"] = "Registro Doctor";
}
 <body class="sign-in site-wrapper">
     
    <div class="container">
      <form asp-controller="User" asp-action="Registro" method="post" role="form" class="form-signin site-wrapper">
        <img class="center-block img-circle img-responsive" src="~/images/doctor.png" width="140">
        <h1 class="text-center">Registro Doctor </h1>  <br/>
        <!--<h3 class="form-signin-heading">Nombre(s)</h3>-->
        <!-- Stack the columns on mobile by making one full-width and the other half-width -->
        
        <div>
            <label for="inputEmail" class="sr-only">Nombre(s)</label>
            <input id="Doctor-names" class="form-control" asp-for="FirstName" placeholder="Nombre(s)" required autofocus>
        </div>  
        <br/>     
        <div>
            <label for="inputEmail" class="sr-only">Apellidos</label>
            <input id="Doctor-lastnames" class="form-control" asp-for="LastNames" placeholder="Apellidos" required autofocus>
        </div>
        <br/>
        <div>
            <label for="inputEmail" class="sr-only">Especialidad</label>
            <input id="especialidad" asp-for="Especialidad" class="form-control" placeholder="Especialidad" required autofocus>
        </div>
        <br/>
        <div>
            <label for="inputEmail" class="sr-only">Correo Electronico</label>
            <input type="email" id="email" class="form-control" asp-for="Email" placeholder="Correo Electronico" required autofocus>
        </div>
        <br/>
        <div>
            <label for="inputEmail" class="sr-only">Contrase単a</label>
            <input type="password" id="passw" class="form-control" asp-for="Password" placeholder="Contrase単a" required autofocus>
        </div>
        <div>
            <label for="inputEmail" class="sr-only">Validar Contrase単a</label>
            <input type="password" id="passw" class="form-control" asp-for="ConfirmPassword" placeholder="Validar Contrase単a" required autofocus>
        </div>
        

        <br/>
        <button id="go-traveler" class="btn btn-lg btn-primary btn-block" type="submit">Registro</button>
    </form>
    </div> <!-- /container -->


    <!-- IE10 viewport hack for Surface/desktop Windows 8 bug

       
        <script src="js/ie10-viewport-bug-workaround.js"></script>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
        <script src="js/bootstrap.min.js"></script> -->

</body>
@section Scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
