                </button>
                <a asp-controller="Home" asp-action="Index" class="navbar-brand">Proyecto Ultra</a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li><a asp-controller="Home" asp-action="Acerca">Acerca</a></li>
                </ul>
                @await Html.PartialAsync("_LoginPartial")
            </div>
